pipeline{
    agent   any
    stages{
        stage("A"){
            steps{
                sh'''
                    echo "Hello"
                    ls
                '''
            }
            
        }
    }
    post{
        always{
            echo "========always========"
        }
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}